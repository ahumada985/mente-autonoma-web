{
  "version": 2,
  "buildCommand": "prisma generate && npm run build",
  "installCommand": "npm install && npx prisma generate",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/chatbot_simple.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "api/chatbot_simple.py"
    },
    {
      "src": "/api/health",
      "dest": "api/chatbot_simple.py"
    },
    {
      "src": "/chatbot",
      "dest": "api/chatbot_simple.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}